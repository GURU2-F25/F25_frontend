<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 프로필 사진 -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_person"
            android:layout_marginTop="16dp"
            android:contentDescription="프로필 이미지" />

        <!-- 사용자 이름 (굵게) -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자이름(볼드)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- 사용자 아이디 -->
        <TextView
            android:id="@+id/tvUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@사용자아이디"
            android:textColor="@color/success_40"
            android:layout_marginTop="4dp" />

        <!-- 팔로우 버튼 -->
        <Button
            android:id="@+id/btnFollow"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="팔로우"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_follow_black"
            android:layout_marginTop="12dp" />

        <!-- 팔로잉/팔로워 수 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팔로잉 0"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/tvFollower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팔로워 0"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 요일 + 날짜 (주간 달력) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weekRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:clipToPadding="false" />

        <!-- 목표 달성률 -->
        <TextView
            android:id="@+id/tvGoalRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11일의 목표 달성률 0%"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="20dp" />

        <!-- 카테고리별 진행률 리스트 -->
        <LinearLayout
            android:id="@+id/layoutCategoryProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <!-- 할 일 섹션 제목 -->
        <TextView
            android:id="@+id/tvTodoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11일의 할 일"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <!-- 할 일 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerTaskList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>