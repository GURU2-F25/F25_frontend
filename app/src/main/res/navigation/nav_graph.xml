<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- 로그인 화면 -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.f25_frontend.ui.login.LoginFragment"
        android:label="로그인"
        tools:layout="@layout/fragment_login">

        <!-- 회원가입 버튼 → 회원가입 화면 -->
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />

        <!-- 로그인 성공 시 → 메인화면 -->
        <action
            android:id="@+id/action_loginFragment_to_todoFragment"
            app:destination="@id/todoFragment" />

    </fragment>

    <!-- 회원가입 화면 -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.f25_frontend.ui.login.SignupFragment"
        android:label="회원가입"
        tools:layout="@layout/fragment_signup">

        <!-- 뒤로가기 → 로그인 화면 -->
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <!-- 회원가입 완료 시 → 프로필 설정 화면 -->
        <action
            android:id="@+id/action_signupFragment_to_profileFragment"
            app:destination="@id/profileFragment" />


    </fragment>

    <!-- 프로필 설정 화면 -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.f25_frontend.ui.profile.ProfileFragment"
        android:label="프로필 설정"
        tools:layout="@layout/fragment_profile">

<!--        프로필 설정 완료 시 → 메인화면 -->
        <action
            android:id="@+id/action_profileFragment_to_todoFragment"
            app:destination="@id/todoFragment" />
    </fragment>

    <!-- 메인 화면 -->
    <fragment
        android:id="@+id/todoFragment"
        android:name="com.example.f25_frontend.ui.todo.TodoFragment"
        android:label="메인화면"
        tools:layout="@layout/fragment_todo">

        <action
            android:id="@+id/action_todoFragment_to_exploreFragment"
            app:destination="@id/exploreFragment" />

        <action
            android:id="@+id/action_todoFragment_to_mypageFragment"
            app:destination="@id/mypageFragment" />
    </fragment>

    <!-- 탐색 화면 -->
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.f25_frontend.ui.explore.ExploreFragment"
        android:label="탐색화면"
        tools:layout="@layout/fragment_explore">

        <action
            android:id="@+id/action_exploreFragment_to_exploreListFragment"
            app:destination="@id/exploreListFragment" />

<!--        <action-->
<!--            android:id="@+id/exploreFragment"-->
<!--            app:popUpTo="@id/exploreListFragment"-->
<!--            app:popUpToInclusive="true" />-->

    </fragment>
    <!-- 탐색 목록 화면 -->
    <fragment
        android:id="@+id/exploreListFragment"
        android:name="com.example.f25_frontend.ui.explore.ExploreListFragment"
        android:label="탐색리스트화면"
        tools:layout="@layout/fragment_explore_list">
        <action
            android:id="@+id/action_exploreListFragment_to_exploreUserFragment"
            app:destination="@id/exploreUserFragment" />
    </fragment>
    <!-- 탐색 사용자 프로필 화면 -->
    <fragment
        android:id="@+id/exploreUserFragment"
        android:name="com.example.f25_frontend.ui.explore.ExploreUserFragment"
        android:label="탐색사용자화면"
        tools:layout="@layout/fragment_explore_user">
        <action
            android:id="@+id/action_exploreUserFragment_to_exploreListFragment"
            app:destination="@id/exploreListFragment" />
    </fragment>

    <!-- 마이페이지 화면 -->
    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.example.f25_frontend.ui.mypage.MypageFragment"
        android:label="마이페이지"
        tools:layout="@layout/fragment_mypage">
        <action
            android:id="@+id/action_mypageFragment_to_mypageFollowerFragment"
            app:destination="@id/mypageFollowerFragment" />
        <action
            android:id="@+id/action_mypageFragment_to_mypageFollowingFragment"
            app:destination="@id/mypageFollowingFragment" />

    </fragment>
    <!-- 마이페이지 팔로워 화면 -->
    <fragment
        android:id="@+id/mypageFollowerFragment"
        android:name="com.example.f25_frontend.ui.mypage.MypageFollowerFragment"
        android:label="내 팔로워 화면"
        tools:layout="@layout/fragment_mypage_follower">
        <action
            android:id="@+id/action_mypageFollowerFragment_to_mypageFragment"
            app:destination="@id/mypageFragment" />
    </fragment>
    <!-- 마이페이지 팔로잉 화면 -->
    <fragment
        android:id="@+id/mypageFollowingFragment"
        android:name="com.example.f25_frontend.ui.mypage.MypageFollowingFragment"
        android:label="내 팔로잉 화면"
        tools:layout="@layout/fragment_mypage_following">
        <action
            android:id="@+id/action_mypageFollowingFragment_to_mypageFragment"
            app:destination="@id/mypageFragment" />
    </fragment>

</navigation>
